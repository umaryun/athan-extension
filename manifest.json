
{
    "manifest_version": 2,
    "name": "Prayer Reminder",
    "version": "1.0",
    "description": "Get a pop-up message when it's time to pray.",
    "permissions": [
      "notifications",
      "alarms",
      "tabs",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons": {
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
  },
  "browser_action":{
    "default_icon": "icon16.png",
    "default_popup": "index.html"}
    
  }
  